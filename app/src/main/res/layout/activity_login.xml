<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg2"
    android:layout_height="match_parent">
   <RelativeLayout
       android:layout_width="match_parent"
       android:background="#309acd32"
    android:layout_height="40dp">
       <de.hdodenhof.circleimageview.CircleImageView
           android:layout_width="30dp"
           android:layout_marginLeft="10dp"
           android:layout_height="wrap_content"
            android:id="@+id/loginfirstlogo"
           android:src="@drawable/hmu1"/>
       <ImageView
           android:layout_width="30dp"
           android:layout_marginLeft="10dp"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/loginfirstlogo"
           android:src="@mipmap/icon"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="医大租车平台"
           android:textSize="20sp"

           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"

           android:textColor="#ffffff"
           android:gravity="center"
           />
   </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_centerInParent="true"
        android:id="@+id/linearlayout1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            android:textColor="#9acd32"
            android:text="用户名"
            android:textSize="15sp"
            />
        <EditText
            android:layout_weight="1"
            android:id="@+id/edt_phonenumber"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/line"
            android:background="@null"
            android:inputType="phone"
            android:singleLine="true"
            android:hint="请输入手机号码"
            android:textAlignment="center"
            android:textColorHint="#ffa500"
          />
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app"
        android:id="@+id/textview_title"
        android:layout_above="@id/linearlayout1"
        android:layout_marginBottom="50dp"
        app:civ_border_width="10dp"
        app:civ_border_color="#60D3D3D3"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/linearlayout1"
        android:id="@+id/linearlayout2"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            android:text="密码"
            android:textColor="#9acd32"
            android:textSize="15sp"
            />
        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_password"
            android:inputType="textPassword"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:hint="请输入密码"
            android:textAlignment="center"
            android:textColorHint="#ffa500"
            android:drawableBottom="@drawable/line"

            />
    </LinearLayout>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="登     录"
        android:id="@+id/btn_login"
        android:textSize="20sp"
        android:background="@drawable/btn_login_shape"
        android:textColor="#ffffff"
        android:layout_below="@id/linearlayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/zhuce"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_login"
        android:clickable="true"
        android:id="@+id/zhuce"
        android:onClick="login2register"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/forgot"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/zhuce"
        android:clickable="true"
        android:id="@+id/forgetPwd"
        android:onClick="forgetPwd"
        />
</RelativeLayout>